# Pause in Minuten wenn CAPTCHA erkannt wird
# Der Bot wartet diese Zeit, bevor er erneut versucht
CAPTCHA_PAUSE_MINUTES=30

# ================================================
# Testmodus (Dry-Run)
# ================================================
# true = Bewerbungen werden NICHT abgesendet, nur Screenshot als Beweis
# false = Bewerbungen werden wirklich abgesendet
# Empfohlen: Erst mit true testen, dann auf false umstellen
DRY_RUN=true
